POST http://localhost:5000/api/events
Content-Type: application/json

{
  "timestamp": "2026-02-06T14:30:00Z",
  "worker_id": "W1",
  "workstation_id": "S1",
  "event_type": "working",
  "confidence": 0.95,
  "count": 0
}

