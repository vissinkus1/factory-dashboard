# Factory Productivity Dashboard - Environment Configuration Template
# Copy this to .env and fill in your values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Application Environment (development, staging, production)
APP_ENV=development
DEBUG=False

# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database Type (sqlite, postgresql, mysql)
DB_TYPE=sqlite
DB_PATH=factory_dashboard.db

# PostgreSQL Configuration (if using PostgreSQL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=Factory_dashboard
# DB_USER=postgres
# DB_PASSWORD=your-password

# ============================================================================
# API CONFIGURATION
# ============================================================================

# API Host and Port
API_HOST=0.0.0.0
API_PORT=5000

# CORS Configuration
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=True

# API Documentation
DOCS_URL=/docs
REDOC_URL=/redoc

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Path (leave empty to log to console only)
LOG_FILE=logs/factory_dashboard.log

# Log Format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ============================================================================
# MONITORING & METRICS
# ============================================================================

# Enable Prometheus Metrics
ENABLE_METRICS=True
METRICS_PORT=8001

# Enable Health Checks
ENABLE_HEALTH_CHECKS=True

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT Configuration (if using JWT authentication)
JWT_SECRET_KEY=jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# HTTPS/SSL
REQUIRE_HTTPS=False
SSL_CERT_PATH=
SSL_KEY_PATH=

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Redis Configuration (for caching/sessions)
REDIS_ENABLED=False
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Elasticsearch Configuration (for logging)
ELASTICSEARCH_ENABLED=False
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=factory_dashboard

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Docker Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=factory-dashboard

# Kubernetes Configuration (if using K8s)
KUBERNETES_ENABLED=False
KUBERNETES_NAMESPACE=default

# ============================================================================
# DEVELOPMENT SETTINGS (Only use in development!)
# ============================================================================

# Enable Test Mode
TEST_MODE=False

# Seed Database on Startup
AUTO_SEED_DATABASE=True

# Number of Sample Records to Generate
SAMPLE_WORKERS=6
SAMPLE_WORKSTATIONS=6
SAMPLE_EVENTS=432
